{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@wlodzimierz/home": [
        "libs/home/src/index.ts"
      ],
      "@wlodzimierz/docs": [
        "libs/docs/src/index.ts"
      ],
      "@wlodzimierz/users": [
        "libs/users/src/index.ts"
      ],
      "@wlodzimierz/statuses": [
        "libs/statuses/src/index.ts"
      ],
      "@wlodzimierz/chat": [
        "libs/chat/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
