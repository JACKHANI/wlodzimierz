{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@wlodzimierz/shared": [
        "libs/shared/src/index.ts"
      ],
      "@wlodzimierz/home": [
        "libs/home/src/index.ts"
      ],
      "@wlodzimierz/feedback": [
        "libs/feedback/src/index.ts"
      ],
      "@wlodzimierz/software": [
        "libs/software/src/index.ts"
      ],
      "@wlodzimierz/docs": [
        "libs/docs/src/index.ts"
      ],
      "@wlodzimierz/docs-api": [
        "libs/docs-api/src/index.ts"
      ],
      "@wlodzimierz/status-not-found": [
        "libs/status-not-found/src/index.ts"
      ],
      "@wlodzimierz/statuses": [
        "libs/statuses/src/index.ts"
      ],
      "@wlodzimierz/auth": [
        "libs/auth/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
